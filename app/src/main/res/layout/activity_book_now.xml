<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure"
    tools:context=".Book_now">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="4dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorAccent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="BOOK"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </LinearLayout>




            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="200dp"
                />
            <Button
                android:id="@+id/carbtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/roundshapbtn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="270dp"
                android:text="Brand"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/modelbtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="350dp"
                android:background="@drawable/roundshapbtn"
                android:text="model"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/typebtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="false"

                android:layout_marginTop="420dp"
                android:background="@drawable/roundshapbtn"
                android:text="Petrol/diesel/CNG"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"/>

            <EditText
                android:id="@+id/cartext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/edittextstyle"
                />

            <EditText
                android:id="@+id/modeltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/edittextstyle"
                />

            <EditText
                android:id="@+id/typetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/edittextstyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="500dp"
                android:text="Enter your address"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:text="Select your car"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>